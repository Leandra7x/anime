{% if items is defined and items %}
<div class="list-items">
	{% if (sort_by is defined and sort_by is not empty) or (show_limit is defined and show_limit is not empty) %}
		<div class="controls">
			{% if sort_by is defined and sort_by is not empty %}
				<ul class="sort-by">
					{% for button in sort_by %}
						<li><a href="{{ button.link }}" title="{{ button.title|trans }}">{{ button.name }}</a></li>
					{% endfor %}
				</ul>
			{% endif %}
			{% if show_limit is defined and show_limit is not empty %}
				<ul class="show-limit">
					{% for button in show_limit %}
						<li><a href="{{ button.link }}" title="{{ button.title|trans }}">{{ button.name }}</a></li>
					{% endfor %}
				</ul>
			{% endif %}
		</div>
	{% endif %}
	{% for item in items %}
		<div class="item">
			<img src="{{ item.cover|apply_filter('catalog')|dummy('catalog') }}" alt="{{ item.name }}" />
			<a href="{{ path('item_show', {'id': item.id, 'name': item.name}) }}" class="name"><strong>{{ item.name }}</strong></a>
			<div class="type">
				<a href="{{ path('home_search', {'search_items[type]': item.type.id}) }}" title="{% trans %}Type{% endtrans %}">{{ item.type.name }}</a>
			</div>
			<ul class="genres">
				{% for genre in item.genres %}
					<li class="genre-item">
						<a href="{{ path('home_search', {'search_items[genres][]': genre.id}) }}" title="{% trans %}Genre{% endtrans %}">{{ genre.name }}</a>
					</li>
				{% endfor %}
			</ul>
		</div>
	{% endfor %}
</div>
{% endif %}