{% extends 'AnimeDBCatalogBundle::layout.html.twig' %}

{% block title %}{% trans %}Add manually{% endtrans %}{% endblock %}

{% block stylesheets %}
	<link href="{{ asset('uploadify/uploadify.css') }}" rel="stylesheet" />
	{{ parent() }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('uploadify/jquery.uploadify.min.js') }}"></script>
{% endblock %}

{% form_theme form 'AnimeDBCatalogBundle:Form:fields.html.twig' %}

{% block content %}
<div class="b-addition-form">
	<h2>{% trans %}Add record{% endtrans %}</h2>
	<form action="{{ path('item_add_manually') }}" method="post" {{ form_enctype(form) }}>
		{{ form_widget(form) }}
		<button type="submit">{% trans %}Add{% endtrans %}</button>
	</form>
</div>
{% endblock %}